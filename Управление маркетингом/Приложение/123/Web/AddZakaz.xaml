<Window x:Class="Web.AddZakaz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказ" Height="192" Width="302">
    <Grid Margin="0,0,2,-17" Height="165" Width="277">
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Button Content="Сохранить" Height="23" HorizontalAlignment="Left" Margin="20,130,0,0" Name="bSave" VerticalAlignment="Top" Width="75" Click="bSave_Click" />
        <Button Content="Отмена" Height="23" HorizontalAlignment="Left" Margin="187,130,0,0" Name="bCancel" VerticalAlignment="Top" Width="75" Click="bClose_Click" />
        <Label Content="Наименование" Height="28" HorizontalAlignment="Left" Margin="3,8,0,0" Name="label5" VerticalAlignment="Top" />
        <ComboBox HorizontalAlignment="Left" Margin="100,37,0,0" Name="cbNameKlient" VerticalAlignment="Top" Width="161"/>
        <Label Content="Имя Клиента" HorizontalAlignment="Left" Margin="12,37,0,81" x:Name="label5_Copy" />
        <ComboBox HorizontalAlignment="Left" Margin="100,8,0,0" Name="cbNaimenovanie" VerticalAlignment="Top" Width="161"/>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="100,67,0,0" Name="tbAvans" VerticalAlignment="Top" Width="161" TextChanged="tbAvans_TextChanged" />
        <Label Content="Аванс" Height="28" HorizontalAlignment="Left" Margin="12,67,0,0" Name="label1" VerticalAlignment="Top" />
    </Grid>
</Window>
