        <ComboBox Height="27" HorizontalAlignment="Left" Margin="12,121,0,0" Name="cbMat" VerticalAlignment="Top" Width="170" />
        <Button Content="Готово" Height="23" HorizontalAlignment="Left" Margin="45,226,0,0" Name="OK" VerticalAlignment="Top" Width="75" Click="OK_Click" />
        <Button Content="Отмена" Height="23" HorizontalAlignment="Left" Margin="167,226,0,0" Name="cancel" VerticalAlignment="Top" Width="75" Click="cancel_Click" />
