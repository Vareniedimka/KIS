        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,27,0,0" Name="Naimenovanie" VerticalAlignment="Top" Width="170" />
        <Label Content="Наименование" Height="28" HorizontalAlignment="Left" Margin="12,0,0,0" Name="label1" VerticalAlignment="Top" Width="170" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,77,0,0" Name="Norma_rashoda" VerticalAlignment="Top" Width="170" />
        <Label Content="Норма расхода" Height="28" HorizontalAlignment="Left" Margin="12,50,0,0" Name="label2" VerticalAlignment="Top" Width="170" />
